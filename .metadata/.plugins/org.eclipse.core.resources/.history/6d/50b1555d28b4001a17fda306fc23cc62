	<script>
		 new Vue({
			 el: '#id_view',
			 data: {
			 currId : '',
			 currNickname: ''
		 },
		 mounted () {
			 axios.post('/currStatus').then(res=> {
				 if (res.data.id.trim().length > 0) {
					 this.currNickname = res.data.nickname; 
					 this.currId = res.data.id;
				 } else {
					 alert('로그인 후 이용바랍니다.');
				 }
			 });
		 }
		 }) 
	</script>


